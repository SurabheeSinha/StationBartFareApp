<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bartsystem">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="366dp"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <TextView
            android:id="@+id/abc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:text="Lets Calculate the Fare !!!!"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:paddingLeft="50dp">

            <TextView
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="28dp"
                android:text="Source"
                android:textSize="22dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="#E1F5FE"
                />

            <Spinner
                android:id="@+id/sourcesp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E1F5FE"
                ></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.23"
            android:paddingLeft="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:textSize="22dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="#E1F5FE"
                />

            <Spinner
                android:id="@+id/destinationsp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E1F5FE"></Spinner>
        </LinearLayout>

        <Button
            android:id="@+id/buttonfare"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="onClick"
            android:text="calculate Fare"
            android:background="#000000"
            android:textColor="#FFFFFF"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/faresvisible"
            android:paddingTop="10dp"
            android:gravity="center"
            android:background="#000000"
            android:paddingBottom="10dp"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/farestext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fare in $"
                android:textSize="30dp"
                android:paddingLeft="25dp"
                android:paddingRight="30dp"
                android:layout_weight="0.28"
                android:textColor="#E3F2FD"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/farestext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#E3F2FD"
                    android:textSize="30dp"
                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>